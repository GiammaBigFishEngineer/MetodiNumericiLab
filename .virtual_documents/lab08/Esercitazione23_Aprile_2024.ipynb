def matrix(n):
    A=np.zeros((n,n),dtype=float)
    for i in range(0,n):
        for k in range(0,n):
            if i == k or k == n:
                A[i,k]= 1
            elif i > k:
                A[i,k]= -1
            else:
                A[i,k]= 0
    return A
